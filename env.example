# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_telegram_bot_token_here

# Instagram Credentials (Optional but recommended)
# These help avoid rate limiting and access private content
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Login behavior (to avoid 429s on free hosts)
IG_LOGIN_ON_START=false
IG_DISABLE_LOGIN=false

# Download & Throttling Settings (Optional)
DOWNLOAD_PATH=./downloads
MIN_REQUEST_INTERVAL_SECONDS=8
RATE_LIMIT_COOLDOWN_SECONDS=600

# Supervision (Railway)
RESTART_ON_STOP=true
