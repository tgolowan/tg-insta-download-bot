# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_telegram_bot_token_here

# Instagram Credentials (Optional - set these in Railway if needed)
# These help avoid rate limiting and access private content
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# Login behavior (Recommended for Railway)
IG_LOGIN_ON_START=false
IG_DISABLE_LOGIN=true

# Download & Throttling Settings (Optional)
DOWNLOAD_PATH=./downloads
MIN_REQUEST_INTERVAL_SECONDS=8
RATE_LIMIT_COOLDOWN_SECONDS=600

# Supervision (Railway)
RESTART_ON_STOP=true
